void usun_komentarze(char *znak) {
    char znak1, znak2;
    znak1 = *znak;
    znak2 = getchar();

    if(znak1 == '/' && znak2 == '/') {
	    while(znak2=='\n'){
	    znak2 = getchar();}
    } else {
	    if(znak2 == '*') {
		    while(!(znak1=='*' && znak2=='/')){
			    znak1 = znak2;
			    znak2 = getchar();
		    }
	    } else {
		    putchar(znak1);
	    }
    }
}
